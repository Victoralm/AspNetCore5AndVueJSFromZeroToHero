@model Admin

<div class="container">
    <div class="col-12">
        <div class="row">

            <h4 class="mb-3">Create a new User</h4>

            <form method="post">
                <div class="col-8 mb-3">
                    <div class="form-floating">
                        <input type="text" asp-for="@Model.Username" name="Username" id="validationCustomUsername" required="" class="form-control single-input" />
                        <label asp-for="@Model.Username"></label>
                        <span asp-validation-for="@Model.Username" class="row text-danger"></span>
                    </div>
                </div>

                <div class="col-8 mb-3">
                    <div class="form-floating">
                        <input type="password" asp-for="@Model.Password" name="Password" id="validationCustomPassword" required="" class="form-control single-input" />
                        <label asp-for="@Model.Password"></label>
                        <span asp-validation-for="@Model.Password" class="row text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Login</button>
            </form>

        </div>
    </div>
</div>