@model UserViewModel

<div class="container">
    <div class="col-12">
        <div class="row">

            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Password</th> @*Why!? o.O*@
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    
                    @foreach (var user in Model.UserList)
                    {
                        <tr id="@user.AdminId">
                            <td>@user.AdminId</td>
                            <td>@user.Username</td>
                            <td>@user.Password</td>
                            <td>
                                <div class="button-group-area">
                                    <a asp-controller="User" asp-action="Edit" asp-route-id="@user.AdminId" class="btn btn-info">Edit</a>
                                    <a asp-controller="User" asp-action="Delete" asp-route-id="@user.AdminId" class="btn btn-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>

                <tfoot>
                    <tr>
                        <td colspan="4">
                            <a asp-controller="User" asp-action="Add" class="btn btn-success">Add User</a>
                        </td>
                    </tr>
                </tfoot>

            </table>

        </div>
    </div>
</div>