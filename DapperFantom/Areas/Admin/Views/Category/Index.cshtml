@model UserViewModel

<div class="container">
    <div class="col-12">
        <div class="row">

            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Category</th>
                        <th>Slug</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var category in Model.CategoryList)
                    {
                        <tr id="@category.CategoryId">
                            <td>@category.CategoryId</td>
                            <td>@category.CategoryName</td>
                            <td>@category.Slug</td>
                            <td>
                                <div class="button-group-area">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-info">Edit</a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>

                <tfoot>
                    <tr>
                        <td colspan="4">
                            <a asp-controller="Category" asp-action="Add" class="btn btn-success">Add Category</a>
                        </td>
                    </tr>
                </tfoot>

            </table>

        </div>
    </div>
</div>