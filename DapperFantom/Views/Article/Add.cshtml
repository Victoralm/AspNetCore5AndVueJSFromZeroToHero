    $(document).ready(function () {
        // Upload button on change call function
        $(".uploadFile").change(function () {
            readURL(this);
        });

        // Read file and return value
        function readURL(input) {
            var url = input.value;
            var ext = url.substring(url.lastIndexOf('.') + 1).toLowerCase();
