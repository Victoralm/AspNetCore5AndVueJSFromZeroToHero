@model GeneralViewModel
<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="overlay bg-parallax" data-stellar-ratio="0.9" data-stellar-vertical-offset="0" data-background=""></div>
        <div class="container">
            <div class="banner_content text-center">
                <h2>Contact Us</h2>
                <div class="page_link">
                    <a href="index.html">Home</a>
                    <a href="contact.html">Contact</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
<!--================Contact Area =================-->
<section class="contact_area p_120">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <h3 class="text-center mb-30">Add a new article</h3>
                <form asp-action="Save" method="post" enctype="multipart/form-data">
                    <div class="col-md-12">
                        <div asp-validation-summary="All" class="text-danger">

                        </div>
                    </div>


                    <div class="mt-10">
                        <input type="text" asp-for="@Model.Article.NameSurname" name="NameSurname" placeholder="Your name and surname" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Your name and surname'" required="" class="single-input" />
                        <span asp-validation-for="@Model.Article.NameSurname" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="mt-10 col-lg-6">
                            <input type="text" asp-for="@Model.Article.Email" name="Email" placeholder="Your email address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Your email address'" required="" class="single-input" />
                            <span asp-validation-for="@Model.Article.Email" class="text-danger"></span>
                        </div>

                        <div class="mt-10 col-lg-4">
                            <input type="text" asp-for="@Model.Article.Phone" name="Phone" placeholder="Your phone number" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Your phone number'" class="single-input" />
                        </div>

                        <div class="mt-10 col-lg-2">
                            <select asp-for="@Model.Article.CityId" name="CityId" class="mr-sm-2 form-select required" id="CityId"  required="required">
                                <option value="" selected disabled hidden >Choose your City</option>
                                @foreach (var city in Model.CityList)
                                {
                                    <option value="@city.CityId">@city.CityName</option>
                                }
                            </select>
                            @*<span asp-validation-for="@Model.Article.CityId" class="text-danger"></span>*@
                        </div>
                    </div>

                    <div class="row">
                        <div class="mt-10 col-lg-9">
                            <input type="text" asp-for="@Model.Article.Title" name="Title" placeholder="Your article Title" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Your article Title'" required="" class="single-input" />
                            <span asp-validation-for="@Model.Article.Title" class="text-danger"></span>
                        </div>
                        <div class="mt-10 col-lg-3">
                            <select asp-for="@Model.Article.CategoryId" name="CategoryId" class="mr-sm-2 form-select required" id="CategoryId" required="required">
                                <option value="" selected disabled hidden >Choose your Category</option>
                                @foreach (var categ in Model.CategorieList)
                                {
                                    <option value="@categ.CategoryId">@categ.CategoryName</option>
                                }
                            </select>
                            @*<span asp-validation-for="@Model.Article.CategoryId" class="text-danger"></span>*@
                        </div>
                    </div>

                    <div class="mt-10">
                        <textarea name="Content" asp-for="@Model.Article.Content" class="single-textarea" placeholder="Your article Content" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Your article Content'" required=""></textarea>
                    </div>

                    <div class="mt-10" onclick="$('#image').click();">
                        Upload Images <br />
                        <label class="btn btn-default">
                            <div class="fileUpload">
                                <span>Select an image</span>
                                <input type="file" class="uploadFile" name="file" />
                            </div>
                        </label>
                    </div>

                    <div class="mt-10">
                        <div class="row">
                            <div class="mt-10 col-lg-10">

                            </div>
                            <div class="mt-10 col-lg-2">
                                <button type="submit" class="genric-btn success circle arrow">Post<span class="lnr lnr-arrow-right"></span></button>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>
<!--================Contact Area =================-->
