<!--================Post Slider Area =================-->
<section class="post_slider_area">
    <div class="post_slider_inner owl-carousel">
        @foreach (var article in Model.PaginationModel.ArticleList.Where(sld => sld.Slider == 1))
        {
            string catName = "";
            string catSlug = "";
            @foreach (var category in Model.CategoryList.Where(cat => cat.CategoryId == article.CategoryId))
            {
                catName = category.CategoryName;
                catSlug = category.Slug;
            }
            <div class="item">
                <div class="post_s_item">
                    <div class="post_img">
                        <img src="~/img/articles/@article.Image" alt="@article.Image">
                    </div>
                    <div class="post_text">
                        <a class="cat" href="/Category/@catSlug/1">@catName</a>
                        <a asp-controller="Article" asp-action="Detail" asp-route-id="@article.Guid"><h4>@article.Title</h4></a>
                        <p>@(article.Content.Length > 150 ? $"{article.Content.Substring(0, 150)} ..." : article.Content)</p>
                        <div class="date">
                            <a href="#"><i class="fa fa-calendar" aria-hidden="true"></i> @article.PublishedDate.ToShortDateString()</a>
                            <a href="#"><i class="fa fa-comments-o" aria-hidden="true"></i> @article.CommentCount</a>
                        </div>
                    </div>
                </div>
            </div>
            @*}*@
        }
    </div>
</section>
