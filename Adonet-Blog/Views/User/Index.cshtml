@model BlogModel


<div class="container">

    <table>
        <thead>
            <tr>
                <td>ID</td>
                <td>Title</td>
                <td>Writer</td>
                <td>To do list</td>
            </tr>
        </thead>
        <tbody>

            @foreach (var post in Model.postList)
            {
                <tr>
                    <td>@post.PostId</td>
                    <td>@post.Title</td>
                    <td>@post.Writer.Username</td>
                    <td>
                        <a class="btn btn-info">Edit</a>
                        <a class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="4">
                    <a class="btn btn-info">Create</a>
                </th>
            </tr>
        </tfoot>
    </table>


</div>
