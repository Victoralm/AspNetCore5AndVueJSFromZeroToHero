@using Adonet_Blog.Entities;
@model List<Post>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@if(Model.Count > 0)
    @foreach (var post in Model)
    {
    <div>
        <p><span style="font-weight: bold;">PostId</span>: @post.PostId</p>
        <p><span style="font-weight: bold;">UserId</span>: @post.UserId</p>
        <p><span style="font-weight: bold;">Title</span>: @post.Title</p>
        <p><span style="font-weight: bold;">Content</span>: @post.Content</p>
        <p><span style="font-weight: bold;">Publishing_Date</span>: @post.Publishing_Date</p>
        <p><span style="font-weight: bold;">Modified_Date</span>: @post.Modified_Date</p>
        <p>______________________________</p>
    </div>
    }


